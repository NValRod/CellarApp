<div class="row">
    <div class="col-lg-6">
        <div class="card p-5">
            <h2>Ultimos movimientos:</h2>
            <table class="table mt-4">
                <thead>
                    <tr>
                    <th>ID:</th>
                    <th>Nombre:</th>
                    <th>Referencia:</th>
                    <th>Cantidad:</th>
                    </tr>
                    <tbody>
                    <% @products.each do |product| %>
                        <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.reference %></td>
                        <td><%= product.quantity %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </thead>
            </table>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card p-5">
            <h2>Top productos:</h2>
        </div>
    </div>
</div>
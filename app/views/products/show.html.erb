<div class="row">
  <div class="col-lg-12">
    <h1>Detalles del producto:</h1>
    <%= link_to"Regresar al listado", products_path, class:"btn btn-primary col-2 p-2" %>
    <%= link_to"Editar este producto", edit_product_path(@product), class:"btn btn-primary col-2 p-2" %>
    <%= link_to"Eliminar este producto",@product, method: :delete, class:"btn btn-danger col-2 p-2" %> 
    <%= link_to"Crear movimiento", new_movement_product_path(@product), class:"btn btn-success col-2 p-2" %>  
  </div>

  <div class="card mt-3 col-lg-6">
    <table class="table">
      <tr>
        <td><b>Nombre del producto:</b></td>
        <td> <%= @product.name%> </td>
      </tr>
      <tr>
        <td><b>Referencia:</b></td>
        <td> <%= @product.reference%></td>
      </tr>
      <tr>
        <td><b>Descripci√≥n:</b></td>
        <td> <%= @product.description%></td>
      </tr>
      <tr>
        <td><b>Cantidad Actual:</b></td>
        <td> <%= @product.quantity%></td>
      </tr>
      <tr>
        <td><b>Fecha de creacion:</b></td>
        <td> <%= @product.created_at %></td>
      </tr>
    </table>
  </div>
</div>


 <div class="row mt-4">
  <div class="col-lg-12 "> 
    <div class="card p-2">
      <h1>Movimientos:</h1>
      <table class="table">
        <thead> 
          <tr>
            <th>Tipo:</th>
            <th>Cantidad:</th>
            <th>Comentario:</th>
            <th>Fecha/hora</th>
          </tr>
        </thead>
        <tbody>
          <% @product.movements.each do |movement|%>
            <tr>
              <td><%= movement.movement_type_name%></td>
              <td><%= movement.quantity%></td>
              <td><%= movement.coment%></td>
              <td><%= movement.created_at%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
 </div>